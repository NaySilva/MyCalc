<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.nay.mycalc.MyCalc">

    <TextView
        android:id="@+id/textNum1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Números"
        tools:layout_editor_absoluteY="29dp"
        tools:layout_editor_absoluteX="16dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/num2"
        android:layout_marginTop="26dp" />

    <EditText
        android:id="@+id/num1"
        android:layout_width="155dp"
        android:layout_height="42dp"
        android:ems="10"
        android:inputType="number"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="62dp"
        android:layout_marginTop="28dp"
        android:layout_below="@+id/textNum1"
        android:layout_alignStart="@+id/btMultiplicar"></EditText>

    <EditText
        android:id="@+id/num2"
        android:layout_width="155dp"
        android:layout_height="42dp"
        android:ems="10"
        android:inputType="number"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="62dp"
        android:layout_alignBaseline="@+id/num1"
        android:layout_alignBottom="@+id/num1"
        android:layout_alignStart="@+id/btSomar"></EditText>


    <TextView
        android:id="@+id/resultado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Resultado"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="227dp"
        android:layout_below="@+id/btSubtrair"
        android:layout_alignStart="@+id/result"
        android:layout_marginTop="44dp" />

    <Button
        android:id="@+id/btDividir"
        android:layout_width="64dp"
        android:layout_height="49dp"
        android:text="÷"
        android:textSize="10pt"
        tools:layout_editor_absoluteX="280dp"
        tools:layout_editor_absoluteY="130dp"
        android:layout_alignBottom="@+id/btSomar"
        android:layout_alignEnd="@+id/num1" />

    <Button
        android:id="@+id/btMultiplicar"
        android:layout_width="78dp"
        android:layout_height="49dp"
        android:text="x"
        android:textSize="8pt"
        tools:layout_editor_absoluteX="190dp"
        tools:layout_editor_absoluteY="130dp"
        android:layout_alignTop="@+id/btSubtrair"
        android:layout_toEndOf="@+id/btSubtrair"
        android:layout_marginStart="17dp" />

    <Button
        android:id="@+id/btSubtrair"
        android:layout_width="73dp"
        android:layout_height="49dp"
        android:text="-"
        android:textSize="12pt"
        tools:layout_editor_absoluteX="98dp"
        tools:layout_editor_absoluteY="130dp"
        android:layout_alignTop="@+id/btSomar"
        android:layout_alignEnd="@+id/num2" />

    <Button
        android:id="@+id/btSomar"
        android:layout_width="69dp"
        android:layout_height="48dp"
        android:text="+"
        android:textSize="10pt"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="131dp"
        android:layout_below="@+id/num2"
        android:layout_alignStart="@+id/resultado"
        android:layout_marginTop="31dp" />

    <EditText
        android:id="@+id/result"
        android:layout_width="207dp"
        android:layout_height="69dp"
        android:ems="20"
        android:textSize="20pt"
        android:textColor="#303F9F"
        android:inputType="numberDecimal"
        tools:layout_editor_absoluteY="255dp"
        tools:layout_editor_absoluteX="16dp"
        android:layout_marginStart="17dp"
        android:layout_below="@+id/resultado"
        android:layout_alignParentStart="true"
        android:layout_marginTop="29dp" />
</RelativeLayout>
